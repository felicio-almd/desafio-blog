<div class="max-w-2xl mx-auto py-8 px-4">
  <h2 class="text-2xl font-bold text-gray-900 mb-6">Editar Perfil</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100 mb-8">
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-6">
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="text-sm text-gray-500 bg-yellow-50 p-3 rounded">
            Aguardando confirmação para: <%= resource.unconfirmed_email %>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "Nova senha", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="text-xs text-gray-500 mb-2">Deixe em branco se não quiser alterar</div>
          <%= f.password_field :password, autocomplete: "new-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <% if @minimum_password_length %>
            <div class="text-xs text-gray-500 mt-1">Mínimo de <%= @minimum_password_length %> caracteres</div>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirme a nova senha", 
              class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <div>
          <%= f.label :current_password, "Senha atual", 
              class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="text-xs text-gray-500 mb-2">Necessária para confirmar as alterações</div>
          <%= f.password_field :current_password, autocomplete: "current-password",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <%= f.submit "Atualizar perfil", 
            class: "w-full mt-6 px-4 py-2 bg-blue-500 text-white font-medium rounded-md hover:bg-blue-600 transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
      </div>
    </div>
  <% end %>

  <div class="border-t border-gray-200 pt-6 mt-8">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Cancelar minha conta</h3>
    
    <div class="bg-red-50 p-4 rounded-md">
      <p class="text-sm text-gray-700 mb-4">Deseja excluir sua conta? Esta ação não pode ser desfeita.</p>
      <%= button_to "Deletar", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "text-red-500 hover:text-red-700" %>
</div>
    </div>
  </div>

  <%= link_to "back", 
      class: "inline-flex items-center mt-6 text-blue-500 hover:text-blue-700 transition-colors" do %>
    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
    </svg>
    Voltar
  <% end %>
</div>