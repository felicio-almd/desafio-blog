<h1><%= @blog_post.title %> </h1>
<%= @blog_post.body %>
<br>
<%= link_to "Editar", edit_blog_post_path(@blog_post) if user_signed_in? %>
<%= button_to "Deletar", @blog_post, method: :delete, data: {turbo_confirm: "Deseja deletar a postagem?"} %>
<br>

<div class="mt-8">
  <h2 class="text-2xl font-bold mb-4">Comentários</h2>

  <div class="space-y-4 mb-6">
    <% @blog_post.comments.order(created_at: :desc).each do |comment| %>
      <div class="bg-gray-50 p-4 rounded-lg">
        <p class="text-gray-700"><%= comment.body %></p>
        <p class="text-sm text-gray-500 mt-2">
          Por <%= comment.user ? comment.user.email : "Anônimo" %> - <%= comment.created_at.strftime("%d/%m/%Y %H:%M") %>
        </p>
      </div>
    <% end %>
  </div>

  <%= form_with(model: [@blog_post, Comment.new], local: true) do |f| %>
    <div class="mb-4">
      <%= f.label :body, "Comentário", class: "block text-gray-700 font-medium" %>
      <%= f.text_area :body, class: "w-full p-2 border rounded", rows: 3 %>
    </div>
    <div>
      <%= f.submit "Enviar", class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
    </div>
  <% end %>


<br>
<%= link_to "Voltar à página inicial", root_path%>