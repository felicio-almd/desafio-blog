<%=  form_with model: blog_post do |form| %>
    <%if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    <% end %>
    <div>
        <%= form.label :titulo%>
        <%= form.text_field :title%>
    </div>
    <div>
        <%= form.label :descrição%>
        <%= form.text_area :body%>
    </div>

    <%= form.button %>
    <br>
    <%= link_to "Voltar à página inicial", root_path%>
<% end %>