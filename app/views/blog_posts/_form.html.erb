<div class="max-w-2xl mx-auto p-6">
  <%= form_with model: blog_post, class: "space-y-6" do |form| %>
    <% if form.object.errors.any? %>
      <div class="bg-red-50 text-red-700 p-4 rounded-md mb-6">
        <% form.object.errors.full_messages.each do |message| %>
          <div class="flex items-center mb-2 last:mb-0">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <%= message %>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="space-y-2">
      <%= form.label :title, "Título", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, 
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900",
          placeholder: "Digite o título do post" %>
    </div>

    <div class="space-y-2">
      <%= form.label :body, "Descrição", class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :body, 
          rows: 8,
          class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900",
          placeholder: "Digite o conteúdo do post" %>
    </div>

    <div class="flex items-center gap-4 pt-4">
      <%= form.submit "Salvar Post", 
          class: "px-4 py-2 bg-blue-500 text-white font-medium rounded-md hover:bg-blue-600 transition-colors" %>
    </div>
  <% end %>
</div>